/* pages/setting/index.wxss */

.memberinfo {
  text-align: center;
  width: 33%;
  border-right: solid #fffff0 1px;
}

.memberinfo_coupon {
  text-align: center;
  width: 34%;
}

.member-tip {
  text-align: center;
  font-size: 13px;
}

.member-number {
  text-align: center;
  font-size: 15px;
}

.memberinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
}

.memberinfo-name {
  float: left;
  margin-left: 10px;
  font-size: 15px;
}

.memberinfo-grade {
  margin-left: 10px;
  font-size: 13px;
}

.member-background {
  padding-top: 15px;
  background-color: #d81e06;
  color: white;
  border-radius: 5px;
  font-size: 12px;
  margin-top: 5px;
  margin-left: 2%;
  margin-right: 2%;
}

.account-box {
  padding-top: 20px;
  padding-bottom: 10px;
}

.profile-wrapper, .account-wrapper {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.profile, .account {
  display: flex;
  padding: 30rpx;
  align-items: center;
  flex-direction: row;
  border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
  flex: 1;
  font-size: 24rpx;
}

.profile-arrow, .account-arrow {
  width: 32rpx;
  height: 32rpx;
}

.btn-quit {
  margin: 15rpx;
}

.reward-col {
  width: 33%;
  float: left;
}

.reward-title {
  font-size: 12px;
  color: gray;
  text-align: center;
}

.reward-amount {
  font-size: 15px;
  color: green;
  text-align: center;
}

.clear {
  clear: both;
}

.reward-box {
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
}
