/* pages/index/payed_share_cash.wxss */

.content {
  height: 100px;
  margin-bottom: 10px;
  padding-bottom: 20px;
  background-color: #ff3d30;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.share-master {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  color: #ffe3af;
  padding-top: 40px;
}

.master-avatar {
  float: left;
}

.master-name {
  margin-left: 10px;
  vertical-align: middle;
}

.clear {
  clear: both;
}

.btn-area {
  width: 36%;
  margin-left: 32%;
}

.memberinfo {
  text-align: center;
  width: 25%;
}

.member-tip {
  text-align: center;
  font-size: 12px;
  color: #bfbfbf;
}

.member-number {
  text-align: center;
  font-size: 20px;
}

.memberinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.memberinfo-name {
  font-size: 15px;
}

.coupon-name {
  color: #00b624;
  font-size: 15px;
}
.weui-cells{
  min-height: 200px;
}
.bottom-info {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30px;
  font-size: 12px;
  color: #8a8a8a;
  bottom: 10px;
}

.wechat-icon {
  float: left;
}

.wechat-info {
  float: left;
  padding-bottom: 5px;
}
.notice-info{
  width:100%;
  margin-top: 20px;
  margin-left: 10px;
  font-size:12px;
}
.notice-no-box {
  border-radius: 50%;
  height: 20px;
  width: 20px;
  display: inline-block;
  background: #238ff9;
  vertical-align: top;
}

.notice-no {
  display: block;
  color: #fff;
  height: 20px;
  line-height: 20px;
  text-align: center;
}
