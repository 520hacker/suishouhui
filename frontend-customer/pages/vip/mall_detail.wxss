/* pages/vip/mall_detail.wxss */

.consume_info {
  background-color: red;
  color: white;
  padding-left: 20px;
  font-size: 20px;
}

.consume_item {
  margin-top: 10px;
  width: 90%;
  margin-left: 5%;
  border-radius:10px;
  background-color: white;
}
.trade {
  color: black;
  padding-top: 5px;
  padding-right: 10px;
  font-size: 18px;
  text-align: right;
  font-weight: bold;
}
.detail {
  margin-left:20px;
  margin-right:10px;
  font-size: 15px;
  overflow: hidden;
}
.title {
  float: left;
  width:75%;
  color: gray;
  text-align: left;
}
.bill {
  float: left;
  width: 25%;
  color:gray;
  text-align: right;
}
.date {
  margin-left:20px;
  color: gray;
  text-align: left;
  font-size: 15px;
  padding-top: 5px;
  margin-bottom: 20px;
  padding-bottom: 15px;
}
.line {
  padding-top: 10px;
  width:90%;
  height:0;
  margin-left: 5%;
  border-bottom: #EAEAEA 1px dashed;
}
.empty {
  margin-top: 30px;
  text-align: center;
  height: 100px;
}
.clear {
  clear: both;
}
.order_title {
  float: left;
  width:30%;
  color: gray;
  text-align: left;
}
.order_bill {
  float: left;
  width: 70%;
  color:gray;
  text-align: left;
}
.complete_line {
  padding-top: 10px;
  width:90%;
  height:0;
  margin-left: 5%;
  border-bottom: red 1px solid;
}
.process {
  float: left;
  width: 25%;
  padding-top: 10px;
  text-align: center;
}
.process_title_complete {
  font-size: 12px;
  color: red;
}
.process_title_start {
  font-size: 12px;
  color: gray;
}
.er_code {
  width: 70%;
  height: 250px;
}