<!--pages/index/trade_qrcode.wxml-->
<view style="text-align: center; margin-top: 5px; border: none; padding: 10px;" class="wxParse-section">
  <view style="display: inline-block; padding: 0.5em; font-size: 1em; border-color: rgb(0, 187, 12); color: rgb(0, 187, 12);" class="wxParse-section">
    <view style="line-height: 22px; font-size: 18px;" class=" wxParse-p">
      <view class="trade-title">请付款 ￥{{trade}}</view>
    </view>
  </view>
</view>
<view style="width:95%;margin-left:10px;margin-top:20px;margin-bottom:50px">
  <view class="wxParse-p">
    <view class="wxParse-br"></view>
  </view>
  <view class="wxParse-p" style="text-align:center">
    <image src="{{path}}" data-src="{{path}}" data-from="article" style="width:200px;height:200px" bindtap="previewQrcode"></image>
  </view>
  <view class="wxParse-p">
    <view class="wxParse-br"></view>
  </view>
  <view class="wxParse-p">
    <view class="center">
      <text style="font-size:14px">请顾客使用微信扫码支付</text>
    </view>
  </view>
  <view class="wxParse-p">
    <view class="wxParse-br"></view>
  </view>
</view>
<view class="btn-area cancel">
  <button type="primary" bindtap="scan">扫顾客付款码收款</button>
</view>