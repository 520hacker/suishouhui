/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.userinfo-image {
  text-align: center;
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 10rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #300e0e;
    text-align: center;
}
.userinfo-expired{
    color: brown;
    font-size: 12px;
    text-align: center;
}
.userinfo-dig {
    margin: 15rpx auto;
    padding: 20rpx 25rpx;
    border-radius: 10rpx;
    background-color: #f85f48;
    color: #fff;
    letter-spacing: 1px;
}

.userinfo-desc {
    color: #bbb;
    font-size: 14rpx;
    margin-bottom: 20rpx;
}

.profile-wrapper, .account-wrapper {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.profile, .account {
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
    flex: 1;
    font-size: 24rpx;
}

.profile-arrow, .account-arrow {
    width: 32rpx;
    height: 32rpx;
}

.btn-quit {
    margin: 15rpx;
}

.beans {
  color: red;
  font-size: 20px;
}
.btn-area{
  width: 70%;
  margin: 10px auto 10px;
}
.contact-btn{
  margin-top: 10px;
  text-align: right;
  margin-right: 5px;
}